<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.marvoot.testingandroid.ViewModel.RegisterViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:focusableInTouchMode="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/people"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/logo_text_main"
                android:textColor="@color/White"
                fontPath="Montserrat-Bold.ttf"
                android:textSize="20dp"/>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <!--<TextView
                android:id="@+id/register_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="@dimen/register_text_main_size"
                android:text="@string/register_text_main"
                android:paddingBottom="@dimen/register_text_main_bottom_padding"
                fontPath="Montserrat-Bold.ttf"/>-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/register_sub_window_width"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/border_radius_login_small_background"
                android:gravity="center">
                <TextView
                    android:id="@+id/register_text_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/register_text_sub_size"
                    android:text="انشاء حساب"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/register_text_main_bottom_padding"
                    android:paddingTop="@dimen/register_text_sub_top_padding"
                    fontPath="DroidKufi-Bold_0.ttf"/>
                <EditText
                    android:id="@+id/register_username_field"
                    android:layout_width="@dimen/register_username_field_width"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/Black"
                    android:background="@drawable/border_radius_login_fields"
                    android:drawableRight="@{viewModel.username_field_icon}"
                    android:hint=" |  الاسم"
                    android:textColorHint="@color/Login_Register_Fields"
                    fontPath="DroidKufi.ttf"
                    android:gravity="right"
                    android:singleLine="true"
                    app:error="@{viewModel.username_field_error}"
                    app:addTextChangedListener="@{viewModel.usernameEditTextWatcher}"
                    app:onFocusChangeListener="@{viewModel.usernameEditFocusListner}"/>
                <EditText
                    android:id="@+id/register_password_field"
                    android:layout_width="@dimen/register_password_field_width"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/Black"
                    android:background="@drawable/border_radius_login_fields"
                    android:drawableRight="@{viewModel.password_field_icon}"
                    android:hint=" |  كلمة السر"
                    android:layout_marginTop="@dimen/register_password_field_top_margin"
                    android:textColorHint="@color/Login_Register_Fields"
                    fontPath="DroidKufi.ttf"
                    android:password="true"
                    android:gravity="right"
                    android:singleLine="true"
                    app:error="@{viewModel.password_field_error}"
                    app:addTextChangedListener="@{viewModel.passwordEditTextWatcher}"
                    app:onFocusChangeListener="@{viewModel.passwordEditFocusListner}"/>
                <Button
                    android:id="@+id/register_gender_field"
                    android:layout_width="@dimen/register_gender_field_width"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/Black"
                    android:background="@drawable/border_radius_login_fields"
                    android:drawableRight="@{viewModel.gender_field_icon_right}"
                    android:drawableLeft="@{viewModel.gender_field_icon_left}"
                    android:hint=" |  النوع"
                    android:layout_marginTop="@dimen/register_gender_field_top_margin"
                    android:textColorHint="@color/Login_Register_Fields"
                    fontPath="DroidKufi.ttf"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/register_gender_field_text_size"
                    android:text="@{viewModel.gender_text}"
                    app:error="@{viewModel.gender_field_error}"
                    app:addTextChangedListener="@{viewModel.genderEditTextWatcher}"
                    android:onClick="@{viewModel.onClickGender}" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:gravity="center"
                    android:paddingTop="@dimen/register_buttons_layout_top_padding"
                    android:paddingBottom="@dimen/register_buttons_layout_bottom_padding">
                    <Button
                        android:id="@+id/register_button_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="انشاء"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/White"
                        fontPath="DroidKufi.ttf"
                        android:onClick="@{viewModel.onClickSearch}"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:visibility="@{viewModel.genderButtonVisibility}">

        <RelativeLayout
            android:id="@+id/popup_menu_relative"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/Overlay"

            android:clickable="true"
            android:onClick="@{viewModel.onClickGenderMenu}">
            <LinearLayout
                android:id="@+id/popup_menu_linear"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_radius_popup_menu">
                <Button
                    android:id="@+id/gender_male"
                    android:layout_width="@dimen/gender_popup_layout_width"
                    android:layout_height="wrap_content"
                    android:text="ذكر"
                    android:background="@color/White"
                    android:textColor="@color/Black"
                    android:layout_marginBottom="@dimen/gender_popup_margin"
                    android:layout_marginTop="@dimen/gender_popup_margin"
                    android:layout_marginRight="@dimen/gender_popup_margin"
                    android:layout_marginLeft="@dimen/gender_popup_margin"
                    fontPath="DroidKufi.ttf"
                    android:onClick="@{viewModel.onClickMale}"/>
                <Button
                    android:id="@+id/gender_female"
                    android:layout_width="@dimen/gender_popup_layout_width"
                    android:layout_height="wrap_content"
                    android:text="انثى"
                    android:background="@color/White"
                    android:textColor="@color/Black"
                    android:layout_marginRight="@dimen/gender_popup_margin"
                    android:layout_marginLeft="@dimen/gender_popup_margin"
                    android:layout_marginBottom="@dimen/gender_popup_margin"
                    fontPath="DroidKufi.ttf"
                    android:onClick="@{viewModel.onClickFemale}"/>
            </LinearLayout>
        </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
    </ScrollView>
</layout>