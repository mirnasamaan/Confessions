<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.marvoot.testingandroid.ViewModel.MainViewModel"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".View.MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/login_text_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textSize="@dimen/login_text_main_size"
                        android:text="@string/login_text_main"
                        android:paddingBottom="@dimen/login_text_main_bottom_padding"
                        fontPath="Montserrat-Bold.ttf"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="@dimen/login_sub_window_width"
                        android:layout_height="match_parent"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:background="@drawable/border_radius_login_small_background"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/login_text_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/login_text_sub_size"
                            android:text="تسجيل دخول"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingBottom="@dimen/login_text_sub_bottom_padding"
                            android:paddingTop="@dimen/login_text_sub_top_padding"
                            fontPath="DroidKufi-Bold_0.ttf"/>
                        <EditText
                            android:id="@+id/username_field"
                            android:layout_width="@dimen/login_username_field_width"
                            android:layout_height="wrap_content"
                            android:textCursorDrawable="@null"
                            android:textColor="@color/Black"
                            android:background="@drawable/border_radius_login_fields"
                            android:drawableRight="@{viewModel.username_field_icon}"
                            android:hint=" |  الاسم"
                            android:textColorHint="@color/Login_Register_Fields"
                            fontPath="DroidKufi.ttf"
                            android:gravity="right"
                            android:singleLine="true"
                            app:error="@{viewModel.username_field_error}"
                            app:addTextChangedListener="@{viewModel.usernameEditTextWatcher}"
                            app:onFocusChangeListener="@{viewModel.usernameEditFocusListner}"/>
                        <EditText
                            android:id="@+id/password_field"
                            android:layout_width="@dimen/login_password_field_width"
                            android:layout_height="wrap_content"
                            android:textCursorDrawable="@null"
                            android:textColor="@color/Black"
                            android:background="@drawable/border_radius_login_fields"
                            android:drawableRight="@{viewModel.password_field_icon}"
                            android:hint=" |  كلمة السر"
                            android:layout_marginTop="@dimen/login_password_field_top_margin"
                            android:textColorHint="@color/Login_Register_Fields"
                            fontPath="DroidKufi.ttf"
                            android:password="true"
                            android:gravity="right"
                            android:singleLine="true"
                            app:error="@{viewModel.password_field_error}"
                            app:addTextChangedListener="@{viewModel.passwordEditTextWatcher}"
                            app:onFocusChangeListener="@{viewModel.passwordEditFocusListner}"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:gravity="center"
                            android:paddingTop="@dimen/login_buttons_layout_top_padding"
                            android:paddingBottom="@dimen/login_buttons_layout_bottom_padding">
                            <Button
                                android:id="@+id/register_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="انشاء حساب"
                                android:background="@drawable/border_register_button"
                                android:textColor="@color/Black"
                                android:layout_marginRight="@dimen/login_buttons"
                                fontPath="DroidKufi.ttf"
                                android:onClick="@{viewModel.onClickRegister}"/>
                            <Button
                                android:id="@+id/login_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="دخول"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/White"
                                android:layout_marginLeft="@dimen/login_buttons"
                                fontPath="DroidKufi.ttf"
                                android:onClick="@{viewModel.onClickSearch}"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>